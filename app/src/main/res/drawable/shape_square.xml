<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape = "rectangle">
    <corners
        android:radius="0dp"/>

    <size android:width="@dimen/shape_side_length"
        android:height="@dimen/shape_side_length" />
    <!--solid android:color = "@android:color/transparent" /-->

    <gradient android:gradientRadius="@dimen/shape_gradient_radius"
        android:type="linear"
        android:angle="135"
        android:startColor="@color/shape_gradient_start_color"
        android:endColor="@color/shape_gradient_end_color"/>

    <stroke android:color = "@android:color/white"
        android:width = "20dp"
        />
</shape>